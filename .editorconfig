# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Configuration files
[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.toml]
indent_size = 2

# Dockerfiles
[{Dockerfile,*.dockerfile}]
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Documentation
[*.{rst,txt}]
max_line_length = 79

# GitHub Actions and workflows
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# GitHub templates
[.github/**/*.md]
trim_trailing_whitespace = false

# Package files
[package.json]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 0

# Configuration files that need specific formatting
[.gitignore]
trim_trailing_whitespace = true

[.dockerignore]
trim_trailing_whitespace = true